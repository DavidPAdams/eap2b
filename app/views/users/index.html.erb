<h1>Users</h1>
<button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#newUserModal">
  Add New User
</button>
<table>
  <thead>
    <tr>
      <th>Last Updated</th>
      <th>Name</th>
      <th>Email</th>
      <th>Title</th>
      <th>Phone</th>
      <th>Status</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    
    <% @users.each do |user| %>
      <tr>
        <td><%= user.created_at %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.title %></td>
        <td><%= user.phone %></td>
        <td class="status_<%= user.status %>"><%= user.status ? 'active' : 'inactive' %></td>
        <td><a href="#" class="btn btn-success btn-sm" data-toggle="modal" data-target="#editUserModal_<%= user.id %>">Edit</a> 
        </td>
        <td><%= link_to user, remote: true, method: :delete, data: { confirm: 'Confirm delete' } do %>
          <button class="btn btn-danger btn-sm">Delete</button>
        <% end %>
        </td>
      </tr>
    <% end %>
    
  </tbody>
</table>
<%= will_paginate @users %>

<div class="modal fade" id="newUserModal" tabindex="-1" role="dialog" aria-labelledby="newUserModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newUserModalLabel">Add New User</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% provide(:button_text, 'Add User') %>
        <%= render 'form', user: @user %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


